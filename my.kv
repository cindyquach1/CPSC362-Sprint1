<MyGridLayout>

    username: username
    password: password

    GridLayout:
        cols:1
        size: root.width - 200, root.height-200 
        pos: 100, 100

        GridLayout:
            cols:1

            Label:
                text: "TRACKER STACKER"

        GridLayout:
            cols: 2

        Label:
            text: "Username: "

        TextInput:
            id: username
            multiline: False

        Label:
            text: "Password: "

        TextInput:
            id: password
            multiline: False

        Button:
            text: "Login"
            on_press:root.btn()
        Button:
            text: "Create Account"
            on_press:root.btn()